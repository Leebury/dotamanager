<h1> Details of <%= @player.player_name %> </h1>

<div class="playerShow">

	<h3>Role:<%= @player.preferred_role %></h3>

	<h3>Most played heroes: <%= @player.most_played_heroes %></h3>
	<ul>
		<% if @player.teams.length > 0 %>

		<li>Member of <%= @player.teams.first.team_name %></li>
		<% end %>	
		<li>Average GPM:<%= @player.average_gpm %></li>
		<li>Average EXP/M:<%= @player.average_exp %></li>
	</ul>
</div>

	<div class="options">
		<%=link_to 'Destroy', @player, method: :delete %>
		<%=link_to 'Edit', edit_player_path(@player) %>

	</div>


